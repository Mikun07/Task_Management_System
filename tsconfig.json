{
  "compilerOptions": {
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["cypress", "vite/client", "node"],
    "skipLibCheck": true,
    "jsx": "react-jsx" // Add this line for React 17+
  },
  "include": ["src", "cypress/**/*.ts"]
}

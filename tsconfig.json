{
  "compilerOptions": {
    "declaration": false,
    "baseUrl": "src", // Change this to point to the src folder
    "paths": {
      "@/*": ["*"] // This remains the same to keep the path aliasing working
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["cypress", "vite/client", "node"],
    "skipLibCheck": true,
    "jsx": "react-jsx" // Add this line for React 17+
  },
  "include": ["src", "cypress/**/*.ts"]
}

{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["cypress", "vite/client", "node"], // Add Node types here
    "skipLibCheck": true
  },
  "include": ["src", "cypress/**/*.ts"] // Ensure Cypress tests are included
}
